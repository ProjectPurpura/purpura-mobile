<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PurpuraApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/roxo_padrao</item>
        <item name="colorPrimaryVariant">@color/roxo_claro</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/verde_padrao</item>
        <item name="colorSecondaryVariant">@color/cinza_padrao</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style
        name="semBarra" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>