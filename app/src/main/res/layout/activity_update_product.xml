<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerProductLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PurpuraApp"
    tools:context=".ui.screens.productRegister.UpdateProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/updateProductBackButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_button" />

            <EditText
                android:id="@+id/updateProductName"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Nome"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                />

            <EditText
                android:id="@+id/updateProductPrice"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Preço"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateProductDescription" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Atualizando Produto"
                android:textColor="@color/verde_padrao"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/updateProductWeight"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Peso"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateProductPrice" />

            <EditText
                android:id="@+id/updateProductQuantity"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Quantidade em estoque"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateProductWeightType" />

            <EditText
                android:id="@+id/updateProductDescription"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Descrição"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateProductName" />

            <EditText

                android:id="@+id/updateProductWeightType"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Medida do peso"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateProductWeight" />

            <Button
                android:id="@+id/updateProductAddProductButton"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="300dp"
                android:backgroundTint="#764EA2"
                android:text="Atualizar"
                app:cornerRadius="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateProductImage"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/updateProductExportImageIcon"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginStart="272dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="@+id/updateProductImage"
                app:layout_constraintTop_toBottomOf="@+id/updateProductQuantity"
                app:layout_constraintVertical_bias="0.8"
                app:srcCompat="@drawable/export_vector" />

            <ImageView
                android:id="@+id/updateProductImage"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateProductQuantity"
                app:srcCompat="@drawable/round_border" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>