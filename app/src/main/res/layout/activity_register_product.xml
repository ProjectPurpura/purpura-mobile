<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/semBarra"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.RegisterProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="150sp"
                android:layout_height="135sp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView30"
                app:srcCompat="@drawable/close_box_vector" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_button" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView29"
                app:srcCompat="@drawable/start_register_product_flow" />

            <EditText
                android:id="@+id/registerProductName"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Nome"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView17" />

            <EditText
                android:id="@+id/registerProductPrice"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Preço"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductDescription" />

            <EditText
                android:id="@+id/registerProductWeight"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Peso"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductPrice" />

            <EditText
                android:id="@+id/registerProductQuantity"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Quantidade em estoque"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductWeightType" />

            <EditText
                android:id="@+id/registerProductDescription"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Descrição"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductName" />

            <EditText

                android:id="@+id/registerProductWeightType"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Medida do peso"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductWeight" />

            <EditText
                android:id="@+id/registerProductImage"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Imagem"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductQuantity" />

            <Button
                android:id="@+id/registerProductAddProductButton"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#764EA2"
                android:text="Adicionar Produto"
                app:cornerRadius="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductImage" />

            <ImageView
                android:id="@+id/registerProductExportImageIcon"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/registerProductImage"
                app:layout_constraintEnd_toEndOf="@+id/registerProductImage"
                app:layout_constraintTop_toTopOf="@+id/registerProductImage"
                app:srcCompat="@drawable/export_image_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>