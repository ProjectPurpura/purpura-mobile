<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerProductLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/semBarra"
    tools:context=".ui.screens.productRegister.RegisterProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Produto"
                android:textColor="#095D19"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView30" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="150sp"
                android:layout_height="135sp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/box_vector"
                app:tint="@color/roxo_padrao" />

            <ImageView
                android:id="@+id/registerProductBackButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_button" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductBackButton"
                app:srcCompat="@drawable/start_register_product_flow" />

            <EditText
                android:id="@+id/registerProductName"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Nome"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView17" />

            <EditText
                android:id="@+id/registerProductPrice"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Preço"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductDescription" />

            <EditText
                android:id="@+id/registerProductWeight"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Peso"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductPrice" />

            <EditText
                android:id="@+id/registerProductQuantity"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Quantidade em estoque"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductWeightType" />

            <EditText
                android:id="@+id/registerProductDescription"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Descrição"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductName" />

            <EditText

                android:id="@+id/registerProductWeightType"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:ems="10"
                android:hint="Medida do peso"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductWeight" />

            <Button
                android:id="@+id/registerProductAddProductButton"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="300dp"
                android:backgroundTint="#764EA2"
                android:text="Adicionar Produto"
                app:cornerRadius="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductImage"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/registerProductExportImageIcon"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginStart="272dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/registerProductImageee"
                app:layout_constraintEnd_toEndOf="@+id/registerProductImageee"
                app:layout_constraintStart_toStartOf="@+id/registerProductImage"
                app:layout_constraintTop_toBottomOf="@+id/registerProductQuantity"
                app:layout_constraintVertical_bias="0.8"
                app:srcCompat="@drawable/export_vector" />

            <ImageView
                android:id="@+id/registerProductImage"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerProductQuantity"
                app:srcCompat="@drawable/round_border" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>