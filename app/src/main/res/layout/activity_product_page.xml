<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PurpuraApp"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.ProductPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Botão de voltar -->
            <ImageView
                android:id="@+id/productPageBackButton"
                android:layout_width="40sp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_button" />

            <!-- ViewPager2 (imagens do produto) -->
            <ImageView
                android:id="@+id/productPageImage"
                android:layout_width="320sp"
                android:layout_height="200dp"
                android:layout_marginTop="88dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Nome do produto -->

            <!-- Valor -->

            <TextView
                android:id="@+id/productPageProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="264dp"
                android:text="Nome do produto"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.188"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageBackButton" />

            <TextView
                android:id="@+id/productPageProductValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="265dp"
                android:text="R$299,99"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toEndOf="@+id/productPageProductName"
                app:layout_constraintTop_toBottomOf="@+id/productPageBackButton" />

            <!-- Foto da empresa -->

            <!-- Nome da empresa -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/productPageCompanyPhoto"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.128"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductName"
                app:srcCompat="@drawable/generic_error" />

            <TextView
                android:id="@+id/productPageCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Nome da empresa"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toEndOf="@+id/productPageCompanyPhoto"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductName" />

            <!-- Peso ícone -->

            <!-- Descrição -->
            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.148"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription"
                app:srcCompat="@drawable/weight_vector"
                app:tint="@color/verde_padrao" />

            <EditText
                android:id="@+id/productPageDescription"
                android:layout_width="320sp"
                android:layout_height="70sp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:focusable="true"
                android:gravity="start|top"
                android:hint="Descrição do produto"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.528"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageCompanyPhoto" />

            <!-- Peso -->
            <TextView
                android:id="@+id/productPageProductWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="XX kg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toEndOf="@+id/imageView20"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription" />

            <!-- Unidade de medida -->
            <TextView
                android:id="@+id/producPageUnitMesure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="28dp"
                android:text="Measure"
                app:layout_constraintStart_toEndOf="@+id/productPageProductWeight"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription" />

            <!-- Ícone localização -->
            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="20dp"
                android:tint="@color/verde_padrao"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView20"
                app:srcCompat="@drawable/location_vector" />

            <!-- Localização -->
            <TextView
                android:id="@+id/productPageProductLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Carapicuíba, SP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.113"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductWeight" />

            <!-- Botão adicionar ao carrinho -->
            <Button
                android:id="@+id/productPageAddToShoppingCart"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/roxo_padrao"
                android:text="Adicionar ao Carrinho"
                app:cornerRadius="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView19" />

            <!-- Botão conversar com vendedor -->
            <Button
                android:id="@+id/productPageGoToChat"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_border"
                android:text="Conversar com o vendedor"
                android:textColor="@color/roxo_padrao"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageAddToShoppingCart"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>