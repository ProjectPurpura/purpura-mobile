<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PurpuraApp"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.ProductPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="-80dp"
            tools:layout_editor_absoluteY="-1dp">

            <!-- Botão de voltar -->
            <ImageView
                android:id="@+id/productPageBackButton"
                android:layout_width="40sp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_button" />

            <!-- ViewPager2 (imagens do produto) -->
            <ImageView
                android:id="@+id/productPageImage"
                android:layout_width="320sp"
                android:layout_height="200dp"
                android:layout_marginTop="88dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Nome do produto -->
            <TextView
                android:id="@+id/productPageProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="264dp"
                android:text="Nome do produto"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.188"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageBackButton" />

            <TextView
                android:id="@+id/rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="264dp"
                android:text="R$"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/productPageProductValue2"
                app:layout_constraintTop_toBottomOf="@+id/productPageBackButton" />

            <TextView
                android:id="@+id/productPageProductValue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="264dp"
                android:layout_marginEnd="44dp"
                android:text="00,00"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageBackButton" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/productPageCompanyPhoto"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.128"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductName"
                app:srcCompat="@drawable/generic_error" />

            <!-- Nome da empresa -->
            <TextView
                android:id="@+id/productPageCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:text="Nome da empresa"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/productPageCompanyPhoto"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductName" />

            <!-- Peso ícone -->

            <!-- Descrição -->
            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.148"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription"
                app:srcCompat="@drawable/weight_vector"
                app:tint="@color/verde_padrao" />

            <EditText
                android:id="@+id/productPageDescription"
                android:layout_width="320sp"
                android:layout_height="70sp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:focusable="true"
                android:gravity="start|top"
                android:hint="Descrição do produto"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.528"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageCompanyPhoto" />

            <!-- Peso -->
            <TextView
                android:id="@+id/productPageProductWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:text="XX"
                app:layout_constraintStart_toEndOf="@+id/imageView20"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription" />

            <!-- Unidade de medida -->
            <TextView
                android:id="@+id/producPageUnitMesure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Measure"
                app:layout_constraintStart_toEndOf="@+id/productPageProductWeight"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription" />

            <!-- Ícone localização -->
            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView20"
                app:srcCompat="@drawable/location_vector"
                app:tint="@color/verde_padrao" />

            <!-- Localização -->
            <TextView
                android:id="@+id/productPageProductLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:text="Carapicuíba, SP"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductWeight" />

            <!-- Botão adicionar ao carrinho -->

            <!-- Botão conversar com vendedor -->
            <Button
                android:id="@+id/productPageAddToShoppingCart"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/roxo_padrao"
                android:text="Adicionar ao Carrinho"
                app:cornerRadius="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <Button
                android:id="@+id/productPageGoToChat2"
                android:layout_width="320sp"
                android:layout_height="50sp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_border"
                android:text="Conversar com o vendedor"
                android:textColor="@color/roxo_padrao"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.527"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageAddToShoppingCart" />

            <View
                android:id="@+id/view"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView19" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione a quantidade"
                android:textColor="@color/roxo_padrao"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintVertical_bias="0.447" />

            <TextView
                android:id="@+id/productPageQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toStartOf="@+id/addQuantity"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <ImageView
                android:id="@+id/addQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:tint="@color/roxo_padrao"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:srcCompat="@drawable/baseline_arrow_right_24" />

            <ImageView
                android:id="@+id/removeQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/roxo_padrao"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toStartOf="@+id/productPageQuantity"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:srcCompat="@drawable/baseline_arrow_left_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>