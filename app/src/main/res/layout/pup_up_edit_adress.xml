<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380sp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Editar Endereço"
            android:textColor="#744D9F"
            android:textSize="24sp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/popUpXButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:rotation="45"
            app:srcCompat="@drawable/x_vector" />
    </LinearLayout>

    <EditText
        android:id="@+id/popUpEditAressCompanyName"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Nome: "
        android:inputType="text" />

    <EditText
        android:id="@+id/popUpEditAressCompanyName2"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Descrição:"
        android:inputType="text" />

    <EditText
        android:id="@+id/popUpEeditAdressCep"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Preço: "
        android:inputType="number" />

    <EditText
        android:id="@+id/popUpEditAdressNumber"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Peso: "
        android:inputType="number" />

    <EditText
        android:id="@+id/popUpEditAdressComplement"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Medida do peso:"
        android:inputType="text" />

    <EditText
        android:id="@+id/popUpEditAdressComplement2"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Carregar imagem"
        android:inputType="text" />

    <Button
        android:id="@+id/popUpEditAdressConfirmAlterations"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:backgroundTint="#007818"
        android:text="Confirmar alteração"
        app:cornerRadius="15sp" />

    <Button
        android:id="@+id/popUpEditAdressCancelAlterations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:backgroundTint="#9F1630"
        android:text="Cancelar"
        app:cornerRadius="15sp" />
</LinearLayout>
