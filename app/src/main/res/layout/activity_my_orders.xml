<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyOrders">

    <!-- Botão voltar -->
    <ImageView
        android:id="@+id/myOrdersBackButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Meus Pedidos"
        android:textColor="#00490E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myOrdersBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Compras e Vendas -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/purchaseView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="#744D9F"
        app:layout_constraintEnd_toStartOf="@id/salesView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/salesView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:background="#E5CFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/purchaseView"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge" />

    <!-- Fundo branco atrás das listas -->
    <View
        android:id="@+id/myOrdersView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/purchaseView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto Compras -->
    <TextView
        android:id="@+id/purchaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compras"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/purchaseView"
        app:layout_constraintEnd_toEndOf="@id/purchaseView"
        app:layout_constraintStart_toStartOf="@id/purchaseView"
        app:layout_constraintTop_toTopOf="@id/purchaseView" />

    <!-- Texto Vendas -->
    <TextView
        android:id="@+id/salesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendas"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/salesView"
        app:layout_constraintEnd_toEndOf="@id/salesView"
        app:layout_constraintStart_toStartOf="@id/salesView"
        app:layout_constraintTop_toTopOf="@id/salesView" />

    <!-- RecyclerView Compras -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/purchaseRecycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/myOrdersView"
        app:layout_constraintEnd_toEndOf="@id/myOrdersView"
        app:layout_constraintStart_toStartOf="@id/myOrdersView"
        app:layout_constraintTop_toTopOf="@id/myOrdersView" />

    <!-- RecyclerView Vendas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/salesRecycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="@id/myOrdersView"
        app:layout_constraintBottom_toBottomOf="@id/myOrdersView"
        app:layout_constraintStart_toStartOf="@id/myOrdersView"
        app:layout_constraintEnd_toEndOf="@id/myOrdersView" />

</androidx.constraintlayout.widget.ConstraintLayout>
