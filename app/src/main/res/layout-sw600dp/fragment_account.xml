<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PurpuraApp"
    tools:context=".ui.account.AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/accountFragmentDashboardIcon"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_dashboard_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:background="@color/roxo_padrao"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backgroundAccount"
                android:layout_width="1019dp"
                android:layout_height="409dp"
                android:src="@drawable/account_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profilePhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintBottom_toBottomOf="@+id/backgroundAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/backgroundAccount"
                app:layout_constraintVertical_bias="0.3"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/accountBagIcon"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="20dp"
                android:src="@drawable/bag_vector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <TextView
                android:id="@+id/accountBagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:text="Meus pedidos"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/accountBagIcon"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <View
                android:id="@+id/myOrdersRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountBagIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountBagIcon" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="400sp"
                android:layout_height="50sp"
                android:layout_marginTop="10dp"
                android:src="@drawable/my_strore_separation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backgroundAccount" />

            <ImageView
                android:id="@+id/accountBoxIcon"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="20dp"
                android:src="@drawable/box_vector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountBagIcon" />

            <TextView
                android:id="@+id/accountProductsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:text="Meus produtos"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/accountBoxIcon"
                app:layout_constraintTop_toBottomOf="@+id/accountBagText" />

            <View
                android:id="@+id/myProductsRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountBoxIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountBoxIcon" />

            <ImageView
                android:id="@+id/accountLocationIcon"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="20dp"
                android:src="@drawable/location_vector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountBoxIcon"
                />

            <TextView
                android:id="@+id/accountLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:text="Meus endereÃ§os"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/accountLocationIcon"
                app:layout_constraintTop_toBottomOf="@+id/accountProductsText" />

            <View
                android:id="@+id/myAddressesRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountLocationIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountLocationIcon" />

            <ImageView
                android:id="@+id/accountPixcon"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="20dp"
                android:src="@drawable/pix_vector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountLocationIcon" />

            <TextView
                android:id="@+id/accountPixText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:text="Minhas chaves pix"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/accountPixcon"
                app:layout_constraintTop_toBottomOf="@+id/accountLocationText" />

            <View
                android:id="@+id/myPixKeysRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountPixcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountPixcon" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="400sp"
                android:layout_height="50sp"
                android:layout_marginTop="5dp"
                android:src="@drawable/my_account_separation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountPixcon" />

            <ImageView
                android:id="@+id/accountPasswordIcon"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="20dp"
                android:src="@drawable/key_vector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountFragmentDashboardIcon" />

            <TextView
                android:id="@+id/accountPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Alterar senha"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toEndOf="@+id/accountPasswordIcon"
                app:layout_constraintTop_toBottomOf="@+id/accountFragmentDasboardText" />

            <View
                android:id="@+id/changePasswordRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountPasswordIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountPasswordIcon" />

            <ImageView
                android:id="@+id/accountProfileImage"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_vector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountPasswordIcon" />

            <TextView
                android:id="@+id/accountProfileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Editar perfil"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintStart_toEndOf="@+id/accountProfileImage"
                app:layout_constraintTop_toBottomOf="@+id/accountPasswordText" />

            <View
                android:id="@+id/editProfileRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountProfileImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountProfileImage" />

            <ImageView
                android:id="@+id/accountLogOutIcon"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="150dp"
                android:src="@drawable/logout_icon"
                android:tint="#FB160E"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView16"
                app:layout_constraintVertical_bias="0.009" />

            <TextView
                android:id="@+id/accountLogOutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sair da conta"
                android:textSize="24sp"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toEndOf="@+id/accountLogOutIcon"
                app:layout_constraintTop_toBottomOf="@+id/imageView16" />

            <View
                android:id="@+id/logOutRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountLogOutIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountLogOutIcon" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="400sp"
                android:layout_height="50sp"
                android:layout_marginTop="15dp"
                android:src="@drawable/configuration_separation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountProfileImage" />

            <TextView
                android:id="@+id/accountFragmentDasboardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Ver Dashboards"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toEndOf="@+id/accountFragmentDashboardIcon"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

            <View
                android:id="@+id/dashboardsRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/accountFragmentDashboardIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountFragmentDashboardIcon" />

            <TextView
                android:id="@+id/accountFragmentCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carregando..."
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/backgroundAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="205sp"
                android:layout_height="40sp"
                android:src="@drawable/white_name"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
                app:layout_constraintEnd_toEndOf="@+id/toolbar3"
                app:layout_constraintStart_toStartOf="@+id/toolbar3"
                app:layout_constraintTop_toTopOf="@+id/toolbar3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>