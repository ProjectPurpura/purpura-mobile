<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PurpuraApp"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.ProductPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="35dp">

            <!-- Botão de voltar -->
            <ImageView
                android:id="@+id/productPageBackButton"
                android:layout_width="40sp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_button" />

            <!-- ViewPager2 (imagens do produto) -->
            <ImageView
                android:id="@+id/productPageImage"
                android:layout_width="357dp"
                android:layout_height="322dp"
                android:layout_marginTop="88dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Nome do produto -->

            <!-- Nome da empresa -->

            <TextView
                android:id="@+id/productPageProductValue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="228dp"
                android:text="00,00"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageImage" />

            <TextView
                android:id="@+id/productPageCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:text="Nome da empresa"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/productPageCompanyPhoto"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductName" />

            <!-- Peso ícone -->

            <!-- Descrição -->

            <!-- Peso -->

            <EditText
                android:id="@+id/productPageDescription"
                android:layout_width="320sp"
                android:layout_height="70sp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:focusable="true"
                android:gravity="start|top"
                android:hint="Descrição do produto"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.326"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageCompanyPhoto" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/productPageCompanyPhoto"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductName"
                app:srcCompat="@drawable/generic_error" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.245"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription"
                app:srcCompat="@drawable/weight_vector"
                app:tint="@color/verde_padrao" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.246"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView20"
                app:srcCompat="@drawable/location_vector"
                app:tint="@color/verde_padrao" />

            <TextView
                android:id="@+id/productPageProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nome do produto"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.262"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageImage" />

            <TextView
                android:id="@+id/productPageProductWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="44dp"
                android:text="XX"
                app:layout_constraintStart_toEndOf="@+id/imageView20"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription" />

            <!-- Unidade de medida -->

            <!-- Ícone localização -->

            <!-- Localização -->

            <TextView
                android:id="@+id/producPageUnitMesure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:text="Measure"
                app:layout_constraintStart_toEndOf="@+id/productPageProductWeight"
                app:layout_constraintTop_toBottomOf="@+id/productPageDescription" />

            <TextView
                android:id="@+id/productPageProductLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Carapicuíba, SP"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                app:layout_constraintTop_toBottomOf="@+id/productPageProductWeight" />

            <!-- Botão adicionar ao carrinho -->

            <!-- Botão conversar com vendedor -->
            <Button
                android:id="@+id/productPageAddToShoppingCart"
                android:layout_width="420sp"
                android:layout_height="50sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/roxo_padrao"
                android:text="Comprar agora"
                app:cornerRadius="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <Button
                android:id="@+id/productPageGoToChat2"
                android:layout_width="420sp"
                android:layout_height="50sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="100px"
                android:background="@drawable/round_border"
                android:text="Conversar com o vendedor"
                android:textColor="@color/roxo_padrao"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPageAddToShoppingCart"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view"
                android:layout_width="420dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView19" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione a quantidade"
                android:textColor="@color/roxo_padrao"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintVertical_bias="0.447" />

            <TextView
                android:id="@+id/productPageQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toStartOf="@+id/addQuantity"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <ImageView
                android:id="@+id/addQuantity"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:srcCompat="@drawable/baseline_arrow_right_24"
                app:tint="@color/roxo_padrao" />

            <ImageView
                android:id="@+id/removeQuantity"
                android:layout_width="100px"
                android:layout_height="100px"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toStartOf="@+id/productPageQuantity"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:srcCompat="@drawable/baseline_arrow_left_24"
                app:tint="@color/roxo_padrao" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>